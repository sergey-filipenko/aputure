              a(class={active: page === "judges"} class="nav-link" href="/judges") Judges
            li.nav-item
              a(class={active: page === "sponsors"} class="nav-link" href="/sponsors") Sponsors
            li.nav-item
              a(class={active: page === "contacts"} class="nav-link" href="/contacts") Contact Us
            li.nav-item
              a(class={active: page === "toc"} class="nav-link" href="/toc") Terms & Conditions

      .col-lg-6.col-sm-12
        .navbar.navbar-expand-sm
          ul.navbar-nav.ml-auto.float-right.flex-wrap.social-links
            li.nav-item.social-link
              a(class="facebook" href="https://www.facebook.com/Aputure/") Facebook
            li.nav-item.social-link
              a(class="instagram" href="https://www.instagram.com/aputuretech/") Instagram
            li.nav-item.social-link
              a(class="youtube" href="https://www.youtube.com/user/aputurephoto") YouTube
