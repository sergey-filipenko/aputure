include ../views/mixins
append styles
  meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
  link(href="images/favicon.png" rel="shortcut icon"  type="image/png")
  link(href="bootstrap/css/bootstrap.min.css", rel="stylesheet")
  // Custom styles for this template 
  link(href="css/main.css", rel="stylesheet")
  
body#page-top
  nav.navbar.navbar-expand-lg.navbar-dark.fixed-top#mainNav
    .container
      a(class="navbar-brand js-scroll-trigger", href="/")
        img(src="images/logo.png" alt="Lights en Location")
      button(class="navbar-toggler navbar-toggler-right", type="button", data-toggle="collapse", data-target="#navbarResponsive", aria-controls="navbarResponsive", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarResponsive
        ul.navbar-nav.ml-auto
          li.nav-item
            a(class={active: page === "prizes"} class="nav-link" href="/prizes") Prizes 
          li.nav-item
            a(class={active: page === "faq"} class="nav-link" href="/faq") FAQ
          li.nav-item
            a(class={"active": page == "judges"} class="nav-link" href="/judges") Judges
          li.nav-item
            a(class={active: page === "sponsors"} class="nav-link" href="/sponsors") Sponsors
          li.nav-item
            a(class={active: page === "contacts"} class="nav-link" href="/contacts") Contact Us
          li.nav-item
            a(class={active: page === "toc"} class="nav-link" href="/toc") Terms & Conditions

  block navigation
  block body
footer
