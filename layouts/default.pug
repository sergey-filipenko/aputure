    .row
      .col-lg-6.col-sm-12
        nav.navbar.navbar-expand-sm
          ul.navbar-nav.mr-auto.flex-wrap
            li.nav-item
              a(class={active: page === "prizes"} class="nav-link" href="/prizes") Prizes
            li.nav-item
              a(class={active: page === "faq"} class="nav-link" href="/faq") FAQ
